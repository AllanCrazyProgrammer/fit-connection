<div class="container-top">
    <div class="container">
        <div class="text-inicio">
            <img src="/images/services-green.png">
            <h2>Servicio - Vigencias Usuario</h2>
            <br>
            <a href="/">‚Üê Back To Home</a>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Servicio</th>
                        <th scope="col">Inicio</th>
                        <th scope="col">Vigencia</th>
                        <th scope="col"></th>

                    </tr>
                </thead>

                {{#each mainTable}}
                <tr class="col fila-{{id}}">
                    <td>{{id}}</td>
                    <td class="usuario">{{this.Usuario.name}}</td>
                    <td class="servicio">{{this.Servicio.servicio}}</td>
                    <td class="fechaInicio">{{fechaInicio}}</td>
                    <td class="fechaFinal">{{fechaFinal}}</td>
                    <td>
                        <button type="submit" class="delete btn btn-danger" data-fila={{id}}>X</button>
                    </td>
                </tr>

                {{/each}}
            </table>
        </div>

        <div><br></div>

        <div class="text-inicio">
            <img src="/images/services-green.png">
            <h2>Servicios - Usuario Agregar Servicio </h2>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <select class="custom-select" id="user"></select>
                    </div>
                </div>
            </div>
            <br>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <input class="new-item form-control" placeholder="Fecha inicio" type="text" id="inicio" />
                    </div>
                </div>
            </div>
            <br>

            <div class="container">
                <div class="row">
                    <div class="col">
                        <input class="new-item form-control" placeholder="Fecha Fin" type="text" id="final" />
                    </div>
                </div>
            </div>

            <br>

            <div class="container">
                <div class="row">
                    <div class="col">
                        <select class="custom-select" id="servicio"></select>
                    </div>
                </div>
            </div>

            <br>

            <div class="container">
                <div class="row">
                    <div class="col">
                        <select class="custom-select" id="ubicacion"></select>
                    </div>
                </div>
            </div>

            <br>

            <div class="col">
                <button type="submit" class="agregar btn btn-success">Agregar</button>
            </div>

        </div>
    </div>
</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script src="/js/usuario-addservice.js"></script>

<script>
    $(function () {
        $("#inicio").datepicker();
        $("#final").datepicker();
    });
</script>