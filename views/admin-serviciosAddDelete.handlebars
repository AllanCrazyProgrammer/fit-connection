<div class="container-top">
  
  <div class="container">  
    <div class="text-inicio">
      <img src="/images/services-green.png">
      
      <h2>Servicio - Eliminar / Agregar Servicio</h2>
      <br>
      <a href="/">‚Üê Back To Home</a>
      
    </div>
    <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Usuario</th>
        <th scope="col">Servicio</th>
        <th scope="col">Ubicacion</th>
        <th scope="col">Inicio</th>
        <th scope="col">Vigencia</th>
        <th scope="col">Eliminar</th>

      </tr>
    </thead>

    {{#each mainTable}}

    <tr class="col fila-{{id}}">
      <td>{{id}}</td>
      <td contenteditable="true" class="usuario">{{this.Usuario.name}}</td>
      <td contenteditable="true" class="servicio">{{this.Servicio.servicio}}</td>
      <td contenteditable="true" class="ubicacion">{{this.Ubicacion.nombre}}</td>
      <td contenteditable="true" class="fechaInicio">{{fechaInicio}}</td>
      <td contenteditable="true" class="fechaFinal">{{fechaFinal}}</td>

      <td>
        <button type="submit" class="delete btn btn-danger" data-fila={{id}}>X</button>
      </td>

    </tr>

    {{/each}}
    </table>  

{{!-- Formulario --}}


  <div class="container">
    <div class="row">
      <div class="col-10">
        <input class="new-item form-control" placeholder="Fecha inicio" type="text" id="inicio" />
      </div>
    </div>
  </div>  

  <div class="container">
    <div class="row">
      <div class="col-10">
        <input class="new-item form-control" placeholder="Fecha Fin" type="text" id="final" />
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-10">
        <select class="custom-select" id="user"></select>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-10">
        <select class="custom-select" id="servicio"></select>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-10">
        <select class="custom-select" id="ubicacion"></select>
      </div>
    </div>
  </div>

  <br>

  <div class="col-2">
    <button type="submit" class="agregar btn btn-success">Agregar</button>
  </div>

</div>

</div>

